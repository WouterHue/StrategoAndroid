<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_background">
    <Button android:id="@+id/btn_search_random_player"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:text="Search Random player"
            android:layout_marginBottom="10dp"/>
            <!--android:onClick="searchRandomOpponent"-->

    <Button android:id="@+id/btn_play_with_friend"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:text="Play with friend"
            android:layout_marginBottom="10dp"/>
    <ListView android:id="@+id/list_online_friends"
              android:layout_width="300dp"
              android:layout_height="fill_parent"
              android:layout_weight="1"
              android:layout_gravity="center_horizontal"
              android:background="#FFFFFF"
              android:visibility="invisible">
    </ListView>
    <Button android:id="@+id/btn_invite_friend"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:visibility="invisible"
            android:text="Start game"/>
</LinearLayout>