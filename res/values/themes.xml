<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomActionBarTheme"
           parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="android:actionBarTabStyle">@style/MyActionBarTabIndicator</item>
    </style>

    <!-- ActionBar background -->
    <style name="MyActionBar"
           parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">#5E0000</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:subtitleTextStyle">@style/MyActionBarSubTitleText</item>
    </style>
    <!-- ActionBar title text color-->
    <style name="MyActionBarTitleText"
           parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#FDB951</item>
    </style>
    <!-- ActionBar subtitle text color-->
    <style name="MyActionBarSubTitleText"
           parent="android:TextAppearance.Holo.Widget.ActionBar.Subtitle">
        <item name="android:textColor">#C4433A</item>
    </style>

    <!-- ActionBar tabs text -->
    <style name="MyActionBarTabText"
           parent="android:Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">#FDB951</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>
    <!--actionbar tab indicator color-->
    <style name="MyActionBarTabIndicator"
            parent="android:Widget.Holo.ActionBar.TabView">
            <item name="android:background">@drawable/actionbar_tab_indicator</item>
    </style>
</resources>